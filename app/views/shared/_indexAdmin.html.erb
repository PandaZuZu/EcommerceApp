<div class='product_container'>
  <% @products.each do |product| %>
  <div class='product_thumb'>
    <%= image_tag(product.pictures[0], size: '100x100') %>
    <br>
    <%= label_tag product.name %>
    <br>
    <div class="product_thumb_desc">
      <%= truncate(product.description, length: 200) %>
    </div>
    <br>
    <%= link_to 'edit', controller: 'product', action: 'edit', product_id: product.id %>
    &nbsp;
    &nbsp;
    &nbsp;
    <%= link_to 'remove', product_destroy_path(product.id), method: :delete, data: { confirm: 'Are you sure?' }  %>
  </div>
  <% end %>
</div>
