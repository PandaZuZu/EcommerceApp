<div class='product_container'>
  <% @products.each do |product| %>
  <div class='product_thumb'>
    <%= image_tag(product.pictures[0], size: '100x100') %>
    <br>
    <%= label_tag product.name %>
    <br>
    <div class="product_thumb_desc">
      <%= truncate(product.description, length: 200)%>
    </div>
    <br>
    <% if session[:user_id] != nil %>
      <%= link_to 'more', controller: 'product', action: 'view', product_id: product.id %>
    <% end %>
  </div>
  <% end %>
</div>
